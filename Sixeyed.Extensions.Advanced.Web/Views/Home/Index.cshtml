@using Recaptcha
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    @using (Html.BeginForm("Submit", "Home", FormMethod.Post, new { id = "form1" }))
    {
        <fieldset>
            <legend>Some UI input</legend>
            <label>Field 1:</label>
            <input type="text" id="field1" class="input-lg text-left" />
        </fieldset>
        <fieldset>
            <legend>Prove you're not a bot</legend>
            @Html.Raw(Html.GenerateCaptcha("reCAPTCHA","blackglass"))
        </fieldset>
        <div>
            <p>
                <button id="btnRegister" type="submit" class="btn btn-default">Register</button>
                @Html.ValidationSummary(true)
            </p>
        </div>

    }
</div>